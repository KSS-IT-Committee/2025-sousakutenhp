---
import "../style/style.css";
import "../style/toppage.css";
import "../style/SubPage.css";
import FloatingMenu from "../components/floating_menu.astro";
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";

import KonamiEasterEgg from "../components/KonamiEasterEgg.jsx";

const { PageTitle } = Astro.props;
---

<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title
            set:html={`${PageTitle.replace(/<\/?[^>]+(>|$)/g, "")} - 創作展`}
        />
        <!-- cssを読み込む -->

        <link rel="icon" type="image/png" href="/favicon.png" />
    </head>

    <body>
        <Header />
        <div class="page-title" set:html={PageTitle} />

        <main class="main-content">
            <slot />
        </main>

        <FloatingMenu />

        <Footer />
        <KonamiEasterEgg client:load />
    </body>
</html>
