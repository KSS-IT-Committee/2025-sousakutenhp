<!-- カウントダウンセクション -->
<section class="countdown-section">
    <div class="countdown-container">
        <h2 class="countdown-title">創作展まで</h2>
        <div class="countdown-display" id="countdown">
            <div class="countdown-item">
                <span class="countdown-number" id="days">--</span>
                <span class="countdown-label">日</span>
            </div>
            <div class="countdown-separator">:</div>
            <div class="countdown-item">
                <span class="countdown-number" id="hours">--</span>
                <span class="countdown-label">時間</span>
            </div>
            <div class="countdown-separator">:</div>
            <div class="countdown-item">
                <span class="countdown-number" id="minutes">--</span>
                <span class="countdown-label">分</span>
            </div>
            <div class="countdown-separator">:</div>
            <div class="countdown-item">
                <span class="countdown-number" id="seconds">--</span>
                <span class="countdown-label">秒</span>
            </div>
        </div>
        <div class="event-info">
            <p class="event-date">
                2025年<span class="br-sp"></span>9月13日(土) - 9月14日(日)
            </p>
            <p class="event-time">開場時間：8:20～15:30（予定）</p>
            <p class="event-location">@東京都立小石川中等教育学校</p>
        </div>
    </div>
</section>

<script>
    // カウントダウン機能
    function updateCountdown(): void {
        // 戻り値の型をvoidに明示
        // 創作展開始日時（2025年9月13日 8:30）
        const eventDate = new Date("2025-09-13T08:30:00");
        const now = new Date();
        const timeDifference = eventDate.getTime() - now.getTime(); // getTime() でミリ秒に変換して計算

        // 各要素を取得し、nullチェックを行う
        const daysElement = document.getElementById("days");
        const hoursElement = document.getElementById("hours");
        const minutesElement = document.getElementById("minutes");
        const secondsElement = document.getElementById("seconds");

        // すべての要素が存在するか確認
        if (
            !daysElement ||
            !hoursElement ||
            !minutesElement ||
            !secondsElement
        ) {
            console.error("カウントダウン表示に必要な要素が見つかりません。");
            return; // 要素が見つからない場合は処理を中断
        }

        if (timeDifference > 0) {
            const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
            const hours = Math.floor(
                (timeDifference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
            );
            const minutes = Math.floor(
                (timeDifference % (1000 * 60 * 60)) / (1000 * 60),
            );
            const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

            daysElement.textContent = days.toString().padStart(2, "0");
            hoursElement.textContent = hours.toString().padStart(2, "0");
            minutesElement.textContent = minutes.toString().padStart(2, "0");
            secondsElement.textContent = seconds.toString().padStart(2, "0");
        } else {
            // イベント開始後の表示
            daysElement.textContent = "00";
            hoursElement.textContent = "00";
            minutesElement.textContent = "00";
            secondsElement.textContent = "00";
            // イベントが終了したらインターバルを停止することも検討
            // clearInterval(intervalId); // 例えば、intervalIdをグローバルまたはクロージャで保持している場合
        }
    }

    // 1秒ごとにカウントダウンを更新
    const intervalId = setInterval(updateCountdown, 1000);

    // 初回ロード時に一度更新
    updateCountdown();
</script>

