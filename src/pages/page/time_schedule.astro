const sousakuSchedules = [
{ time: "08:45 〜 10:00", event: "公演", location: "各クラス" },
{ time: "10:20 〜 11:35", event: "公演", location: "各クラス" },
{ time: "12:30 〜 13:45", event: "公演", location: "各クラス" },
{ time: "14:05 〜 15:20", event: "公演", location: "各クラス" },
