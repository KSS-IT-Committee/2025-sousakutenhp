// サンプルスケジュールデータ
const kaitakuSchedules = [
  { time: "08:45 〜 09:15", event: "公演", location: "各クラス" },
  { time: "09:30 〜 10:00", event: "公演", location: "各クラス" },
  { time: "10:15 〜 10:45", event: "公演", location: "各クラス" },
  { time: "11:00 〜 11:30", event: "公演", location: "各クラス" },
  { time: "12:30 〜 13:00", event: "公演", location: "各クラス" },
  { time: "13:15 〜 13:45", event: "公演", location: "各クラス" },
  { time: "14:00 〜 14:30", event: "公演", location: "各クラス" },
  { time: "14:45 〜 15:15", event: "公演", location: "各クラス" }
